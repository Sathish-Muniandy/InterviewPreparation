    <style name="TextViewBold">
        <item name="android:textSize">25dp</item>
        <item name="android:background">@color/black</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewMedium">
        <item name="android:textSize">15dp</item>
        <item name="android:background">@color/blue_secondary</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/green_secondary</item>
        <item name="android:textStyle">normal</item>
    </style>




</resources>